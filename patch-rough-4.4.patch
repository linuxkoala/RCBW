+static u64 recalcuate_quota(u64 remaining, u64 prevquota, u64 prevtotal)
+{
+    u64 newquota = remaining;
+   
+    newquota = newquota * prevquota;
+    do_div(newquota, prevtotal);
+
+    return newquota;
+}
